<% if resource.errors.any? %>
  <% items = resource.errors.full_messages %>
  <errors
    :error-message="'<%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>'"
    :error-items="[<% items.each_with_index {|message, i| %>`<%= message.html_safe %>`<%= i < (items.length - 1) ? ',' : '' %><% } %>]"
  ></errors>
<% end %>
